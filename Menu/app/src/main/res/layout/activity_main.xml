<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <menu.aprivate.com.kitchenmenu.WaterView
      android:id="@+id/waterView"
      android:background="@color/colorPrimaryDark"
      android:layout_width="match_parent"
      android:layout_height="150dp" />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  <FrameLayout
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/xiang"
        android:layout_width="30dp"
        android:layout_height="30dp" />
  <menu.aprivate.com.kitchenmenu.LoadView
      android:id="@+id/loadingView"
      android:layout_gravity="center"
      android:layout_width="100dp"
      android:layout_height="100dp"
      ></menu.aprivate.com.kitchenmenu.LoadView>

  </FrameLayout>
    <menu.aprivate.com.kitchenmenu.MyPb
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:circle_color="#0000ff"
        app:circle_radius="70dp"/>
  </LinearLayout>


  <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
   <!-- <include
        android:visibility="gone"
